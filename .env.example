# =============================================================================
# AI Coding Assistant Pro - Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values for your environment

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================
# OpenRouter API Key (Required for AI functionality)
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://ai_user:ai_password_secure_123@localhost:5432/ai_assistant

# For development with SQLite (comment out PostgreSQL URL above)
# DATABASE_URL=sqlite:///./ai_assistant.db

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for caching and session storage
REDIS_URL=redis://:redis_password_123@localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens and encryption (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum file upload size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Maximum execution timeout in seconds
MAX_EXECUTION_TIMEOUT=30

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limiting for different user types
RATE_LIMIT_ANONYMOUS=30
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_PREMIUM=500
RATE_LIMIT_PERIOD=60

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=8001

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# From email address
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# Default AI model
DEFAULT_AI_MODEL=deepseek/deepseek-chat-v3-0324

# Model temperature (0.0 to 2.0)
DEFAULT_TEMPERATURE=0.7

# Maximum tokens for AI responses
DEFAULT_MAX_TOKENS=4096

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Upload directory
UPLOAD_DIR=uploads

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.py,.js,.ts,.java,.cpp,.c,.go,.rs,.php,.rb,.sh,.txt,.md,.json,.yaml,.yml,.xml,.html,.css,.sql

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup directory
BACKUP_DIR=backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
REACT_APP_API_URL=http://localhost:8000

# Frontend environment
REACT_APP_ENVIRONMENT=development

# Application version
REACT_APP_VERSION=2.0.0

# Enable development tools
REACT_APP_ENABLE_DEV_TOOLS=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=ai-coding-assistant

# Docker network
DOCKER_NETWORK=ai_assistant_network

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
# SSL certificate paths (for production deployment)
SSL_CERT_PATH=/etc/ssl/certs/ai-assistant.crt
SSL_KEY_PATH=/etc/ssl/private/ai-assistant.key

# =============================================================================
# WEBHOOK CONFIGURATION (Optional)
# =============================================================================
# Webhook URL for notifications
WEBHOOK_URL=

# Webhook secret for verification
WEBHOOK_SECRET=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable hot reload in development
HOT_RELOAD=true

# Enable debug toolbar
DEBUG_TOOLBAR=false

# Mock AI responses (for testing without API key)
MOCK_AI_RESPONSES=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Enable caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable compression
ENABLE_COMPRESSION=true

# =============================================================================
# ADDITIONAL SERVICES (Optional)
# =============================================================================
# MinIO for object storage (optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ai-assistant

# Elasticsearch for logging (optional)
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords in production
# 3. Regularly rotate API keys and secrets
# 4. Enable HTTPS in production
# 5. Configure proper firewall rules
# 6. Monitor logs for suspicious activity
# 7. Backup your database regularly
# 8. Test your configuration in staging environment first